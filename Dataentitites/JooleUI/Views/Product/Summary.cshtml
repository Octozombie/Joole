@model IEnumerable<JooleUI.Models.ProductVM>

@{
    ViewBag.Title = "Summary";
}

<style>
    .column {
        float: left;
        padding: 10px;
    }

    .left {
        width: 25%;
    }

    .right {
        width: 75%;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />

<br />
@ViewBag.Message
<br />
<form style="text-align: center;">
    Search for products:
    <input type="text" name="searchString">
    <input type="submit" value="Search!">
</form>
<br />

<div class="row">
    <form class="column left" style="background-color:#eee;">
        <div style="padding-bottom: 5px; border-bottom-style: solid; text-align: center;">Search: <input type="submit" class="btn btn-primary" value="Save"> <button class="btn btn-primary" id="clear">Clear</button></div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid; text-align: center;">Product | Project</div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid;">Product Type</div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid; text-align: center;">
            Model Year:
            <input type="text" name="beginningYear" maxlength="4" size="4"> - <input type="text" name="endingYear" maxlength="4" size="4">
        </div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid;">Technical Specifications</div>
        <div style="padding-top: 5px;"></div>
        @*Airflow (CFM) <br />
        <input type="range" name="CFM" min="10" max="90">
        Max Power (W) <br />
        <input type="range" name="W" min="9.84" max="65">
        Sound at max speed (dBA) <br />
        <input type="range" name="dBA" min="20" max="35">
        Fan sweep diameter (in) <br />
        <input type="range" name="in" min="18" max="60">*@
        <p>
            <label for="airflow-amount">Airflow (CFM) </label><br />
            <input type="text" id="airflow-amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="airflow-slider"></div>
        </div>
        <p>
            <label for="power-amount">Max Power (W) </label><br />
            <input type="text" id="power-amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="power-slider"></div>
        </div>
        <p>
            <label for="sound-amount">Sound at max speed (dBA)</label><br />
            <input type="text" id="sound-amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="sound-slider"></div>
        </div>
        <p>
            <label for="sweep-amount">Fan sweep diameter (in) </label><br />
            <input type="text" id="sweep-amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="sweep-slider"></div>
        </div>

    </form>
    @section scripts{
        <script>
            $(function () {
                $("#airflow-slider").slider({
                    range: true,
                    min: 10,
                    max: 90,
                    values: [10, 90],
                    slide: function (event, ui) {
                        $("#airflow-amount").val(ui.values[0] + " - " + ui.values[1]);
                    }
                });
                $("#airflow-amount").val($("#airflow-slider").slider("values", 0) +
                    " - " + $("#airflow-slider").slider("values", 1));
            });
            $(function () {
                $("#power-slider").slider({
                    range: true,
                    min: 10,
                    max: 65,
                    values: [10, 65],
                    slide: function (event, ui) {
                        $("#power-amount").val(ui.values[0] + " - " + ui.values[1]);
                    }
                });
                $("#power-amount").val($("#power-slider").slider("values", 0) +
                    " - " + $("#power-slider").slider("values", 1));
            });
            $(function () {
                $("#sound-slider").slider({
                    range: true,
                    min: 20,
                    max: 35,
                    values: [20, 35],
                    slide: function (event, ui) {
                        $("#sound-amount").val(ui.values[0] + " - " + ui.values[1]);
                    }
                });
                $("#sound-amount").val($("#sound-slider").slider("values", 0) +
                    " - " + $("#sound-slider").slider("values", 1));
            });
            $(function () {
                $("#sweep-slider").slider({
                    range: true,
                    min: 18,
                    max: 60,
                    values: [18, 60],
                    slide: function (event, ui) {
                        $("#sweep-amount").val(ui.values[0] + " - " + ui.values[1]);
                    }
                });
                $("#sweep-amount").val($("#sweep-slider").slider("values", 0) +
                    " - " + $("#sweep-slider").slider("values", 1));
            });
        </script>
    }
    <div class="column right">
        <form>
            @foreach (var product in Model)
            {
                <div id="+@Html.DisplayFor(modelItem => product.productID)+" style="border: 3px solid gray; text-align: center; display: inline-block; width: 200px; height: 400px;" onclick="myFunction(this)">
                    Image goes here.<br />
                    <b>@Html.DisplayFor(modelItem => product.productName)</b><br />
                    <b>@Html.DisplayFor(modelItem => product.series)</b><br />
                    <b>@Html.DisplayFor(modelItem => product.model)</b><br />
                    @*@foreach (var c in product.characteristics)
                        {
                            @Html.DisplayFor(modelItem => c)<br />
                        }
                        @Html.DisplayFor(modelItem => product.characteristics)<br />*@
                    <input type="checkbox" name="compare" value=@Html.DisplayFor(modelItem => product.productID) /> <b>Compare</b>
                    <input class="btn btn-primary" type="submit" value="Add to">
                </div>
                <script>
                    function myFunction(item) {
                        document.getElementById(item.id).style.border = "3px solid red";
                    }
                </script>
            }
        </form>
    </div>
</div>






