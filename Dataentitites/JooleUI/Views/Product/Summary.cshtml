@model IEnumerable<JooleUI.Models.ProductVM>
@{
    ViewBag.Title = "Summary";
}
<style>
    a.my-class {
        color: #ff0000
    }

        a.my-class:active {
            color: #0e86f8
        }

        a.my-class:link {
            color: black
        }

        a.my-class:hover {
            color: black
        }

        a.my-class:visited {
            color: black
        }

    .column {
        float: left;
        padding: 10px;
    }

    .left {
        width: 25%;
    }

    .right {
        width: 75%;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />

<header>
    <div style="height:80px;text-align:center;margin-top:50px;margin-left:160px">
        <img width="150" src="~/Images/Joole.bmp" style="float:left" />
        <form style="color:black;font:bold;width:700px;margin-left:50px">
            <b>Search for products:</b>
            <input type="text" name="searchString">
            <input class="btn btn-primary" type="submit" value="Search!">
        </form>
    </div>
</header>
<br />
<div class="row" style="background-color:white">
    <form class="column left" style="background-color:ghostwhite">
        <div style="padding-bottom: 5px;border-top-style:solid; border-bottom-style: solid;border-right-style:solid; text-align: center;">Search: <input type="submit" class="btn btn-primary" value="Save"> <button class="btn btn-primary" id="clear">Clear</button></div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid;border-right-style:solid; text-align: center;">Product | Project</div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid;border-right-style:solid;">@Html.DropDownList("productType", (IEnumerable<SelectListItem>)ViewBag.ProductTypes, "Product Type")</div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid; text-align: center;border-right-style:solid;">
            Model Year:
            <input type="text" name="beginningYear" maxlength="4" size="4"> - <input type="text" name="endingYear" maxlength="4" size="4">
        </div>
        <div style="padding-top: 5px; padding-bottom: 5px; border-bottom-style: solid;">Technical Specifications</div>
        <div style="padding-top: 5px;"></div>
        @*Airflow (CFM) <br />
            <input type="range" name="CFM" min="10" max="90">
            Max Power (W) <br />
            <input type="range" name="W" min="9.84" max="65">
            Sound at max speed (dBA) <br />
            <input type="range" name="dBA" min="20" max="35">
            Fan sweep diameter (in) <br />
            <input type="range" name="in" min="18" max="60">*@
        <p>
            <label for="airflow-amount">Airflow (CFM) </label><br />
            <input type="text" name="aamin" id="airflow-amount-min" readonly style="border:0; color:#f6931f; font-weight:bold;"> - 
            <input type="text" name="aamax" id="airflow-amount-max" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="airflow-slider"></div>
        </div>
        <p>
            <label for="power-amount">Max Power (W) </label><br />
            <input type="text" name="pamin" id="power-amount-min" readonly style="border:0; color:#f6931f; font-weight:bold;">
            <input type="text" name="pamax" id="power-amount-max" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="power-slider"></div>
        </div>
        <p>
            <label for="sound-amount">Sound at max speed (dBA)</label><br />
            <input type="text" name="samin" id="sound-amount-min" readonly style="border:0; color:#f6931f; font-weight:bold;">
            <input type="text" name="samax" id="sound-amount-max" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="sound-slider"></div>
        </div>
        <p>
            <label for="sweep-amount">Fan sweep diameter (in) </label><br />
            <input type="text" name="swamin" id="sweep-amount-min" readonly style="border:0; color:#f6931f; font-weight:bold;">
            <input type="text" name="swamax" id="sweep-amount-max" readonly style="border:0; color:#f6931f; font-weight:bold;">
        </p>
        <div class="demo">
            <div id="sweep-slider"></div>
        </div>
    </form>
    @section scripts{
        <script>
            $(function () {
                $("#airflow-slider").slider({
                    range: true,
                    min: 10,
                    max: 90,
                    values: [10, 90],
                    slide: function (event, ui) {
                        $("#airflow-amount-min").val(ui.values[0]);
                        $("#airflow-amount-max").val(ui.values[1]);
                    }
                });
                $("#airflow-amount-min").val($("#airflow-slider").slider("values", 0));
                $("#airflow-amount-max").val($("#airflow-slider").slider("values", 1));
            });
            $(function () {
                $("#power-slider").slider({
                    range: true,
                    min: 10,
                    max: 65,
                    values: [10, 65],
                    slide: function (event, ui) {
                        $("#power-amount-min").val(ui.values[0]);
                        $("#power-amount-max").val(ui.values[1]);
                    }
                });
                $("#power-amount-min").val($("#power-slider").slider("values", 0));
                $("#power-amount-max").val($("#power-slider").slider("values", 1));
            });
            $(function () {
                $("#sound-slider").slider({
                    range: true,
                    min: 20,
                    max: 35,
                    values: [20, 35],
                    slide: function (event, ui) {
                        $("#sound-amount-min").val(ui.values[0]);
                        $("#sound-amount-max").val(ui.values[1]);
                    }
                });
                $("#sound-amount-min").val($("#sound-slider").slider("values", 0));
                $("#sound-amount-max").val($("#sound-slider").slider("values", 1));
            });
            $(function () {
                $("#sweep-slider").slider({
                    range: true,
                    min: 18,
                    max: 60,
                    values: [18, 60],
                    slide: function (event, ui) {
                        $("#sweep-amount-min").val(ui.values[0]);
                        $("#sweep-amount-max").val(ui.values[1]);
                    }
                });
                $("#sweep-amount-min").val($("#sweep-slider").slider("values", 0));
                $("#sweep-amount-max").val($("#sweep-slider").slider("values", 1));
            });
        </script>
    }
    <div class="column right">
        <form>
            @foreach (var product in Model)
            {
                <div id="@Html.DisplayFor(modelItem => product.productID)" style="border: 3px solid gray; text-align: center; display: inline-block; width: 200px; height: 400px;" onclick="myFunction(this)">
                    Image goes here.<br />
                    <b> @Html.ActionLink("" + @Html.DisplayFor(modelItem => product.productName) + "", "Summa", "Home", new { id = @Html.DisplayFor(modelItem => product.productID) }, new { @class = "my-class" })</b>
                    <br />
                    <b>@Html.DisplayFor(modelItem => product.series)</b><br />
                    <b>@Html.DisplayFor(modelItem => product.model)</b><br />
                    @*@foreach (var c in product.characteristics)
                        {
                            @Html.DisplayFor(modelItem => c)<br />
                        }
                        @Html.DisplayFor(modelItem => product.characteristics)<br />*@
                    <input type="checkbox" name="compare" value=@Html.DisplayFor(modelItem => product.productID) /> <b>Compare</b>
                    <input class="btn btn-primary" type="submit" value="Add to">
                </div>
            }
        </form>
    </div>
</div>


